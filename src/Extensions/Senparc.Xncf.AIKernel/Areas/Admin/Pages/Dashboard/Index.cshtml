@page
@model Senparc.Xncf.AIKernel.Areas.AIKernel.Pages.Index
@{
    ViewData["Title"] = "AIKernel 仪表盘";
    Layout = "_Layout_Vue";
}

@section style {
    <style>
        #home-header .el-main {
            padding: 20px 10px 0px 10px;
            height: auto;
        }

        .xncf-stat-item {
            position: relative;
            display: block;
            margin-bottom: 10px;
            border: 1px solid #E4E4E4;
            overflow: hidden;
            padding-bottom: 5px;
            border-radius: 5px;
            background-clip: padding-box;
            background: #FFF;
            transition: all 300ms ease-in-out;
            padding-left: 10px;
            height: 120px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

            .xncf-stat-item .icon {
                font-size: 45px;
                color: #BAB8B8;
                position: absolute;
                right: 20px;
                top: 50%;
                transform: translateY(-50%);
            }

            .xncf-stat-item .count {
                font-size: 32px;
                font-weight: bold;
                line-height: 1.65857;
            }

            .xncf-stat-item .tit {
                color: #BAB8B8;
                font-size: 18px;
            }

            .xncf-stat-item p {
                margin-bottom: 5px;
            }

        .chart-title {
            font-size: 20px;
        }

        .chart-li {
            padding-top: 20px;
        }

            .chart-li li {
                line-height: 2;
            }

            .chart-li .fa {
                margin-right: 5px;
            }

        .box-card {
            margin-top: 10px
        }

            .box-card:hover {
                border-color: purple; /* 外框颜色 */
                box-shadow: 0 0 10px rgba(128, 0, 128, 0.5); /* 发光阴影颜色 */
            }

        /* 右侧图表区域卡片样式覆盖 */
        .el-main .el-col-16 .box-card {
            margin-top: 0;
        }

        #xncf-modules-area {
            margin-bottom: 50px;
        }

            #xncf-modules-area .xncf-item {
            }

                #xncf-modules-area .xncf-item .version {
                    float: right;
                }

                #xncf-modules-area .xncf-item .icon {
                    float: left;
                }

                /* 模块卡片样式优化 */
                #xncf-modules-area .xncf-item .box-card {
                    height: 160px;
                    transition: all 0.3s ease;
                    cursor: pointer;
                }

                    #xncf-modules-area .xncf-item .box-card:hover {
                        transform: translateY(-5px);
                        border-color: #8c52ff;
                        box-shadow: 0 5px 15px rgba(140, 82, 255, 0.2);
                    }

        /* 模块图标样式优化 */
        .component-item {
            display: flex;
            align-items: center;
            padding: 15px;
            height: 100%;
        }

            .component-item .icon {
                font-size: 40px;
                color: #8c52ff;
                transition: all 0.3s ease;
                margin-right: 15px;
                flex-shrink: 0;
            }

            .component-item .description {
                flex: 1;
                font-size: 13px;
                color: #666;
                overflow: hidden;
                text-overflow: ellipsis;
                display: -webkit-box;
                -webkit-line-clamp: 3;
                -webkit-box-orient: vertical;
                line-height: 1.5;
            }



        #xncf-modules-area .xncf-item .box-card:hover .icon {
            transform: scale(1.1);
        }



        /* 版本号样式优化 */
        #xncf-modules-area .xncf-item .version {
            background: #f0f2f5;
            padding: 2px 6px;
            border-radius: 10px;
            font-size: 12px;
            color: #666;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
        }

            /* 可升级版本的样式 */
            #xncf-modules-area .xncf-item .version.version-upgradeable {
                background: #e6f1fc;
                color: #409EFF;
                border: 1px solid #b3d8ff;
            }

        .version-upgrade-icon {
            color: #409EFF;
            margin-left: 4px;
            font-size: 14px;
        }

        /* 模块名称样式 */
        .xncf-item .el-card__header {
            padding: 10px 15px;
        }

        /* 响应式布局优化 */
        @@media screen and (max-width: 1200px) {
            #xncf-modules-area .el-col-6 {
                width: 33.33%;
            }
        }

        @@media screen and (max-width: 768px) {
            #xncf-modules-area .el-col-6 {
                width: 50%;
            }
        }

        @@media screen and (max-width: 480px) {
            #xncf-modules-area .el-col-6 {
                width: 100%;
            }
        }

        /* 图表容器样式 */
        .charts-container {
            height: 260px;
        }

        /* 针对包含charts-container的卡片内容区域移除内边距 */
        .el-card__body .charts-container {
            margin-bottom: -40px; /* 抵消父元素的padding，底部有足够留白 */
        }

        /* 添加更强烈的抖动动画关键帧 */
        @@keyframes shake {
            0%, 100% {
                transform: translateX(0) rotate(0deg);
            }

            15% {
                transform: translateX(-8px) rotate(-2deg);
            }

            30% {
                transform: translateX(6px) rotate(1.5deg);
            }

            45% {
                transform: translateX(-4px) rotate(-0.5deg);
            }

            60% {
                transform: translateX(2px) rotate(0.25deg);
            }

            75% {
                transform: translateX(-1px) rotate(-0.125deg);
            }
        }

        /* 添加发光动画关键帧 */
        @@keyframes glow {
            0%, 100% {
                box-shadow: 0 0 5px rgba(140, 82, 255, 0.2);
                transform: scale(1);
            }

            50% {
                box-shadow: 0 0 20px rgba(140, 82, 255, 0.6);
                transform: scale(1.02);
            }
        }

        /* 添加淡化效果动画 */
        @@keyframes fade {
            0%, 100% {
                opacity: 1;
            }

            50% {
                opacity: 0.6;
            }
        }

        /* 动画类 */
        .shake-animation {
            animation: shake 0.8s cubic-bezier(.36,.07,.19,.97) both;
        }

        .glow-animation {
            animation: glow 1.2s ease-in-out;
        }

        .fade-animation {
            animation: fade 1.2s ease-in-out;
        }
    </style>
}

